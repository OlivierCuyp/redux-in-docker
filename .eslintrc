{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Auth0Lock": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "react/jsx-curly-spacing": [2, "always"],
    "semi": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "no-console": 0,
    "comma-dangle": [2, "always-multiline"],
    "quotes": [2, "single", "avoid-escape"]
  }
}
